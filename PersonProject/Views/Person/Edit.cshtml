@model PersonProject.Models.MainViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h3>@ViewData["error"]</h3>

@using (Html.BeginForm("Edit", "Person", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
       

        <div class="form-group">
            @Html.LabelFor(model => model.person.spouse_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.person.Spouse.first_name,
                 new
                    {
                        
                         @class = "autocomplete-with-hidden",
                            data_url = Url.Action("GetListForAutocomplete", "Person")
                        })
                @Html.HiddenFor(model => model.person.spouse_id)
                


               
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <a class="btn btn-default" href="@Url.Action("Index", "Person")">Cancel</a>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

